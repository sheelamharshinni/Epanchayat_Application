<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10ssp"
                android:orientation="horizontal">

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/registration"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/lay_skip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.techdatum.epanchayat.textUi.CustomTextView
                        android:id="@+id/skipNow"
                        style="@style/SubHeaderStyle"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:text="@string/skip"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/txt_large_size" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_110sdp"
                    android:background="@color/white"
                    android:elevation="@dimen/_5sdp"
                    android:src="@drawable/ic_photo_camera_black_24dp"
                    app:civ_border_color="@color/colorPrimary"
                    app:civ_border_width="2dp"
                    tools:ignore="VectorDrawableCompat" />

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:text="@string/takepicture" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="horizontal">

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:text="@string/role" />

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="@string/mandatory"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/lay_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/bubble">

                <com.techdatum.epanchayat.textUi.CustomTextView
                    android:id="@+id/txt_rolename"
                    style="@style/NormalHeaderStyle"
                    android:layout_margin="@dimen/_14sdp"
                    android:hint="@string/selectrole" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/_10sdp"
                    app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp"
                    tools:ignore="VectorDrawableCompat" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="horizontal">

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:text="@string/district" />

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="@string/mandatory"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/lay_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/bubble">

                <com.techdatum.epanchayat.textUi.CustomTextView
                    android:id="@+id/txt_district"
                    style="@style/NormalHeaderStyle"
                    android:layout_margin="@dimen/_14sdp"
                    android:hint="@string/selectdistrict" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/_10sdp"
                    app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp"
                    tools:ignore="VectorDrawableCompat" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lay_text_divisiton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="horizontal">

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:text="@string/division" />

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="@string/mandatory"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/lay_et_division"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/bubble">

                <com.techdatum.epanchayat.textUi.CustomTextView
                    android:id="@+id/txt_division"
                    style="@style/NormalHeaderStyle"
                    android:layout_margin="@dimen/_14sdp"
                    android:hint="@string/selectdivision" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/_10sdp"
                    app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp"
                    tools:ignore="VectorDrawableCompat" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lay_text_mandal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="horizontal">

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:text="@string/mandal" />

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="@string/mandatory"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/lay_et_mandal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/bubble">

                <com.techdatum.epanchayat.textUi.CustomTextView
                    android:id="@+id/txt_mandal"
                    style="@style/NormalHeaderStyle"
                    android:layout_margin="@dimen/_14sdp"
                    android:hint="@string/selectmandal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/_10sdp"
                    app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp"
                    tools:ignore="VectorDrawableCompat" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lay_text_Gps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="horizontal">

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:text="@string/grampanchayat" />

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="@string/mandatory"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/lay_et_gps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/bubble">

                <com.techdatum.epanchayat.textUi.CustomTextView
                    android:id="@+id/txt_grampanchayat"
                    style="@style/NormalHeaderStyle"
                    android:layout_margin="@dimen/_14sdp"
                    android:hint="@string/selectgrampanchayat" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/_10sdp"
                    app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp"
                    tools:ignore="VectorDrawableCompat" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="horizontal">

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:text="@string/emial" />

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="@string/mandatory"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/bubble"
                android:hint="@string/emailhint"
                android:inputType="textEmailAddress"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/colorSubtitle"
                android:textColorHint="@color/edittexthintcolor"
                android:textSize="@dimen/_12sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="horizontal">

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:text="@string/mobilenumber_dept" />

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="@string/mandatory"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_mobilenumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/bubble"
                android:hint="@string/mobilehint"
                android:inputType="phone|number"
                android:maxLength="10"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/colorSubtitle"
                android:textColorHint="@color/edittexthintcolor"
                android:textSize="@dimen/_12sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="horizontal">

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:text="@string/titlename" />

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="@string/mandatory"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/bubble">

                <com.techdatum.epanchayat.textUi.CustomTextView
                    android:id="@+id/txt_title"
                    style="@style/NormalHeaderStyle"
                    android:layout_margin="@dimen/_14sdp"
                    android:hint="@string/selecttitle" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="horizontal">

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:text="@string/firstname" />

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="@string/mandatory"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/bubble">

                <EditText
                    android:id="@+id/et_surname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/bubble"
                    android:hint="@string/selectfirstname"
                    android:inputType="text"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="@color/colorSubtitle"
                    android:textColorHint="@color/edittexthintcolor"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="horizontal">

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:text="@string/lasttname" />

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="@string/mandatory"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/bubble">

                <EditText
                    android:id="@+id/et_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/bubble"
                    android:hint="@string/selectlastname"
                    android:inputType="text"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="@color/colorSubtitle"
                    android:textColorHint="@color/edittexthintcolor"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="horizontal">

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:text="@string/gender" />

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="@string/mandatory"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/lay_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/bubble">

                <com.techdatum.epanchayat.textUi.CustomTextView
                    android:id="@+id/txt_gender"
                    style="@style/NormalHeaderStyle"
                    android:layout_margin="@dimen/_14sdp"
                    android:hint="@string/selectgender" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/_10sdp"
                    app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp"
                    tools:ignore="VectorDrawableCompat" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="horizontal">

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:text="@string/Dob" />

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="@string/mandatory"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:background="@drawable/bubble"
                android:orientation="vertical">

                <com.techdatum.epanchayat.textUi.CustomTextView
                    android:id="@+id/txt_dateOfBirth"
                    style="@style/NormalHeaderStyle"
                    android:layout_centerVertical="true"
                    android:hint="@string/Dob"
                    android:paddingStart="32dp"
                    android:paddingLeft="32dp"
                    android:textColor="@color/primary_text_color" />

                <ImageView
                    android:id="@+id/im_dateOfBirth"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    app:srcCompat="@drawable/appointments" />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="horizontal">

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:text="@string/username" />

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="@string/mandatory"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/bubble">

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/bubble"
                    android:hint="@string/username"
                    android:inputType="text"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="@color/colorSubtitle"
                    android:textColorHint="@color/edittexthintcolor"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="horizontal">

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:text="@string/password" />

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="@string/mandatory"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/bubble">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/bubble"
                    android:hint="@string/confirmpasssword"
                    android:inputType="text"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColorHint="@color/edittexthintcolor"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="horizontal">

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:text="@string/confirmpassword" />

                <com.techdatum.epanchayat.textUi.CustomTextView
                    style="@style/HeaderStyle"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="@string/mandatory"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/bubble">

                <EditText
                    android:id="@+id/et_confirmpassword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/bubble"
                    android:hint="@string/confirmpassswordfieldhint"
                    android:inputType="text"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColorHint="@color/edittexthintcolor"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="@string/submit"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>